      "name": "Register",
      "item": [
        {
          "name": "Unique Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// 1. Check karein ke status code 422 hai (Validation Error)\r",
                  "pm.test(\"Status code is 422 - Duplicate Entry Blocked\", function () {\r",
                  "    pm.response.to.have.status(422);\r",
                  "});\r",
                  "\r",
                  "// 2. Error Message Integrity Check\r",
                  "pm.test(\"Validation error for unique email is present\", function () {\r",
                  "    const jsonData = pm.response.json();\r",
                  "    \r",
                  "    // Check karein ke 'errors' object mojud hai\r",
                  "    pm.expect(jsonData).to.have.property('errors');\r",
                  "    \r",
                  "    // Check karein ke email field par hi error aaya hai\r",
                  "    pm.expect(jsonData.errors).to.have.property('email');\r",
                  "    \r",
                  "    // Check karein ke error message wahi hai jo Laravel default deta hai\r",
                  "    pm.expect(jsonData.errors.email[0]).to.include(\"has already been taken\");\r",
                  "});\r",
                  "\r",
                  "// 3. Negative Integrity Check (Data create nahi hona chahiye)\r",
                  "pm.test(\"User and Token should not be in response\", function () {\r",
                  "    const jsonData = pm.response.json();\r",
                  "    pm.expect(jsonData.user).to.be.undefined;\r",
                  "    pm.expect(jsonData.access_token).to.be.undefined;\r",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
