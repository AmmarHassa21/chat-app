            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 422 - Validation Failed\", function () {\r",
                  "    pm.response.to.have.status(422);\r",
                  "});\r",
                  "\r",
                  "pm.test(\"Specific error check\", function () {\r",
                  "    const jsonData = pm.response.json();\r",
                  "    \r",
                  "    // Agar password bheja hi nahi toh 'required' check karega\r",
                  "    // Agar bhej kar mismatch kiya toh 'confirmation' check karega\r",
                  "    const errorMsg = jsonData.errors.password[0];\r",
                  "    \r",
                  "    const isRequiredError = errorMsg.includes(\"required\");\r",
                  "    const isMismatchError = errorMsg.includes(\"confirmation does not match\");\r",
                  "\r",
                  "    pm.expect(isRequiredError || isMismatchError).to.be.true;\r",
                  "    \r",
                  "    console.log(\"Actual Error Message: \" + errorMsg);\r",
                  "});"
                ],
