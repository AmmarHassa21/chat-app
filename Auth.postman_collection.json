                  "    pm.expect(jsonData.message.toLowerCase()).to.include(\"success\");\r",
                  "    \r",
                  "    // Check User email\r",
                  "    pm.expect(jsonData.user).to.have.property('email');\r",
                  "    pm.expect(jsonData.user.email).to.eql(\"atika1@gmail.com\");\r",
                  "    \r",
                  "    // Check Token\r",
                  "    pm.expect(jsonData).to.have.property('access_token');\r",
                  "    pm.expect(jsonData.token_type).to.eql(\"Bearer\");\r",
                  "});\r",
                  "\r",
                  "// 3. Automation\r",
                  "pm.test(\"New token saved for future API calls\", function () {\r",
                  "    const jsonData = pm.response.json();\r",
                  "    if (jsonData.access_token) {\r",
